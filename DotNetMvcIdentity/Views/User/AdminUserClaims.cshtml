@model ClaimsUserViewModel

@{
    ViewData["Title"] = "Admin claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" >
    <input type="hidden" asp-for="IdUser"/>
    <div class="card">
        <div class="card-header">
            <h3>Assign permissions</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count(); i++)
            {
                <div class="m-3 form-check">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType"/>
                    <input asp-for="@Model.Claims[i].Selected" class="form-check-input"/>
                    <label class="form-check-lagel" asp-for="@Model.Claims[i].Selected">@Model.Claims[i].ClaimType</label>
                </div>
            }
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success w-50">Assing claim</button>
        </div>
    </div>
</form>