@model AppUser

<h1 class="text-info">Assing user roles</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post" asp-controller="User" asp-action="UpdateUser">
            <input asp-for="@Model.Id" type="hidden" />
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IdRol"></label>
                <select asp-for="IdRol" asp-items="@Model.Roles" class="form-control">
                    <option disabled selected>--Choice rol--</option>
                </select>                
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Update user</button>
                <a asp-action="Index" class="text-dark" style="width: auto">Come back</a>
            </div>
        </form>
    </div>
</div>
