@model ChangePasswordViewModel;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> _userManager;

@{
    ViewData["Title"] = "Change password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Change user password</h3>
        <form asp-controller="User" asp-action="ChangePassword" method="POST">
            <div class="text-danger" asp-validation-summary="All"></div>
            <input type="hidden" name="email" value="@_userManager.GetUserName(User)" />
            <div class="row mt-4">
                <div class="col-sm-6 offset-3">
                    <div class="mb-3">
                        <label asp-for="Password" class="col-md-2"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="col-md-3"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 offset-3">
                        <button type="submit" class="btn btn-success w-100 btn-lg">Update<i class="bi bi-arrow-right-circle-fill"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}