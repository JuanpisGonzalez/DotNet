<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DotNetMvcIdentity</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--Boostrap icons-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">


    <!--Style jquery datepicker-->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.14.0/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.7/css/dataTables.dataTables.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DotNetMvcIdentity.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DotNetMvcIdentity</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Role" asp-action="Index">Roles admin</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Index">Users admin</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!--Authorization roles and claims-->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Auth/Claims
                            </a>
                            <ul class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Authorization" asp-action="PublicAccess">Public access</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Authorization" asp-action="AuthenticateAccess">Authenticate access</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Authorization" asp-action="UserAccess">User access</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Authorization" asp-action="RegisteredAccess">Registered access</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Authorization" asp-action="AdminAccess">Admin access</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Authorization" asp-action="UserAdminAccess">User admin access</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Authorization" asp-action="UserAndAdminAccess">User & admin access</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Authorization" asp-action="AdminAccessCreatePermission">Admin access created permission</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Authorization" asp-action="AdminAccessUpdateDeletePermission">Admin access update-delete permission</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Authorization" asp-action="AdminAccessCreateUpdateDeletePermission">Admin access create-update-delete permission</a>
                            </ul>
                        </li>

                    </ul>

                    <!--Partial view login and register-->
                    <partial name="_LoginRegisterViewPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DotNetMvcIdentity - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!--Js jquery datepicker-->
    <script src="https://code.jquery.com/ui/1.14.0/jquery-ui.js"></script>
    <script src="https://cdn.datatables.net/2.1.7/js/dataTables.js"></script>
    <script>
        $(function () {
            $("#datePicker").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: '1930:2020',
                dateFormat: 'yy-mm-dd'
            })
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
